<script>
  $(document).on('click', '.premium', function(event) {
      $('#gocart_popupOverlay').show();
      $('body').addClass('active_gocart');
  });
  $(document).on('click', '.gocart_close', function(event) {
      $('#gocart_popupOverlay').hide();
      $('body').removeClass('active_gocart');
  });
</script>
